<h2>会員一覧</h2>
<% @customers.each do |customer| %>
  <table>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %> <%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <% if customer.is_active %>
        <td>有効</td>
      <% else %>
        <td>無効</td>
      <% end %>
    </tr>
  </table>
<% end %>