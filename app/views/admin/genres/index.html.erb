<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
 <label for="inputGenreName">ジャンル名</label>
 <%= f.text_field :name, autofocus: true, id:"inputGenreName", placeholder:"ジャンル名" %>
 <%= f.submit "新規登録" %>
<% end %>


<% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
  </tr>
<% end %>